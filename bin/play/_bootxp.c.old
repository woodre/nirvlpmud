#include <ansi.h>

int cmd_bootxp()
{
  mapping m;
  int     c;
  
  m = (mapping)"/obj/exp_store"->query_map();
  
  if(!(c=m[(string)this_player()->query_name()])) {
    write("You haven't earned any experience this boot cycle.\n");
    return 1;
  }
  
  write("You have earned "+HIW+comma_number(c)+NORM+" xp this reboot.\n");
  write("Visit Cosmo's Apartment Building to see the Top Scores!\n");
  return 1;
}
