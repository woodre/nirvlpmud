#include <security.h>

int cmd_log(string str)
{
 object soul;
 if((int)this_player()->query_level() < CREATE)
  return 0;
 soul = this_player();
 if(str)
  soul->set_log("/log/"+str);
 if(!file_size((string)soul->query_log()))
 {
  write("No such file: "+(string)soul->query_log()+"\n");
  return 1;
 }
 cat((string)soul->query_log());
 return 1;
}
