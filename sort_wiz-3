#!/bin/sh
cd players
echo ""
echo 'List of Wizards ' `date`
echo ""
echo "Name      Lev Hours"
echo ""
egrep '^level |^cap_name |^age ' *.o |\
sed -e 's/\.o:/ /' -e 's/\"//g' |\
sort |\
awk '
$2=="cap_name" { jump = $1; }
$2=="age" { age = $3; }
$2=="level" { if ($3 > 19) printf("%-10s %2d %d\n", jump, $3, age/30/60);
	    age = 0;  }' |\
sort +1rn +2rn |\
head -100
