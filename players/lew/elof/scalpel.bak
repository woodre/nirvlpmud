inherit "obj/weapon";
int i,x;
reset(arg) {
   ::reset(arg);
if(arg) return;
       set_alias("scalpel");
       set_name("Scalpel of Hawkeye");
       set_short("Hawkeye's Scalpel");
       set_long("A very powerful and sharp Scalpel of Hawkeye.\n");
         set_class(14);
         set_weight(1);
         set_value(10000);
       set_hit_func(this_object());
}
weapon_hit(attacker) {
say(this_player()->query_name()+"'s slices his enemy to pieces with his scalpel!\n");
write("You slice your oponent to bits with the scalpel!\n");
i = random(10);
x=0;
if (i>0) {
if(this_player()->query_align() > 100);
x = i + 9 ;
}
  return x;
  }
