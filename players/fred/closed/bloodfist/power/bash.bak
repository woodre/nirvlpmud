#include "/players/zeus/closed/bloodfist/defs.h"
#include "/players/zeus/closed/bloodfist/obj/valid_attack.h"

status main(string str, object PO, object User)
{
  int dmg, cost, activity;
  string meat, which, srt, ns, js;
  object nmy, wep;
  if(str)
  { 
    sscanf(str, "%s", meat);
    sscanf(str, "%s %s", meat, which);
    if(sscanf(str, "%s %s", meat, which) != 2) {}
    nmy = valid_attack(meat, User);
  }
  else if(!str)
    if(User->query_attack())
      nmy = (object)User->query_attack();

  if(User->query_spell_dam())
  {
    TOU "You are too drained to do this again.\n");
    return 1;
  }
    
  if(!nmy)
  {
    TOU"Who do you want to attack?\n");
    return 1;
  }

  if(!which && !nmy->id(str) && str)
    which = str;

  if(which) 
    wep = DIR+"power/unsheath.c"->main(which, PO, User);
  else
    wep = (object)User->query_weapon();

  activity = (int)PO->activity_bonus();
  cost = 27 - ((WIS / 20) + (FAI / 50));
  dmg = (FAI / 10) + (MIT / 25) + (ACC / 50) + random(25) + GOD + activity;
  dmg = (int)PO->stance_bonus(dmg);
  PO->add_activity(2);

  srt = (string)wep->short();
  if(sscanf(srt, "%s(%s", ns, js))
    srt = ns;

  if(!wep)
  {
    TOU "You crush "+nmy->short()+" with your fists!\n");
    TRU Name+" crushes "+nmy->short()+" with "+User->POS+" fists!\n",
      ({ User }));
  }
  else {
    TOU "You crush "+nmy->short()+" with your "+srt+"!\n");
    TRU Name+" crushes "+nmy->short()+" with "+User->POS+" "+
      srt+"!\n", ({ User }));
  }
  User->spell_object(nmy,"",dmg,cost,"","","");
  if((object)nmy->query_attack() != User)
  {
    TOU nmy->short()+" turns "+nmy->POS+" attention towards you!\n");
    TRU nmy->short()+" turns "+nmy->POS+" attention towards "+Name+"!\n",
      ({ User }));
    nmy->attack_object(User);
  }

  if(which)
    DIR+"power/sheath.c"->main(which, PO, User);

  return 1;
}

