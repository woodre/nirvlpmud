init()
{
add_action("aa","aa");
}

aa()
{
   int i,d;
   string mestr,s;
   s = "";
   d = time()/(60*60*24)%(64*64); /* What is today? */
write("d is: " + d + "\n");
   for(i=0; d>0; i++)
   {
      if(d%2 == 1) s=set_bit(s,i);
write("i: " + i + " d: " + d + " s: " + s + "\n");
write(test_bit(s, 1) + "\t");
 write(test_bit(s, 2) + "\t");
 write(test_bit(s, 3) + "\t");
 write(test_bit(s, 4) + "\t");
 write(test_bit(s, 5) + "\t");
 write(test_bit(s, 6) + "\t");
 write(test_bit(s, 7) + "\t");
 write(test_bit(s, 8) + "\t");
write("\n");
      d = d/2;
   }
  if(this_player())
  mestr=(string)this_player()->query_real_name();
  if(!mestr) mestr = "nobody";
   write("Your passcode for the day is: "+extract(crypt(mestr,s),5,8)+"\n");
write(crypt("beano", "x1"));
return 1;
}

get() { return 1; }
id(str) {return str == "aa"; }
