        while(ob)
         { if(ob!=aim&&ob!=this_player()) 
            tell_object(ob,capitalize(this_player()->query_real_name())+" poses for "
            +capitalize(aim->query_real_name())+", showing "+cobj(aim->query_gender())+
            " "+adj(this_player()->query_gender())+
            " beautiful ivory fangs.\n");
           ob=next_inventory(ob);
         } 
        tell_object(aim,capitalize(this_player()->query_real_name())+" poses for you"+
        ", showing you "+adj(this_player()->query_gender())+" beautiful ivory fangs.\n");
        write("You pose for "+capitalize(aim->query_real_name())+
              ", showing "+cobj(aim->query_gender())+" your beautiful ivory fangs.\n");
     }
    return 1;
}
vlad()
{  object who;
   if(this_player()->query_real_name()!="nikki") return;
   who=find_living("vlad");
   if(who&&who->query_interactive())
     { write("Vlad is already awake.\n"); return 1; }
   who=clone_object("/players/trix/closed/obj/summer");
   move_object(who,environment(this_object()));
   call_other(who,"set_owner_name","nikki");
   call_other(who,"set_access_level",5);
   call_other(who,"summer_nikki");
   return 1;
}
