inherit"obj/weapon";
reset(arg) {
::reset(arg);
if(arg) return;
set_name("blade");
set_alias("sword");
set_short("Karma's Death Blade");
set_long(
"This is Karma's Death Blade, a weapon that Trix gave Karma to use it only\n"
+ "the day of his Birthday. \n");
set_value(0);
set_weight(1);
set_class(30);
set_hit_func(this_object());
}
weapon_hit(attacker) {
if(random(100) < 15) {
write(attacker->query_name()+" is slammed by your blade.\n");
say(this_player()->query_name()+" swings his Death Blade with a rapid movement piercing "+attacker->query_name()+"'s flesh.\n");
return 6;
   }
return 0;
 }
