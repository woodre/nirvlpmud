#include "/players/pestilence/ansi.h"
#define DUNEPATH     "/players/dune/closed/guild"
#define DAEMDIR        DUNEPATH+"/daemons"
#define MORED        DAEMDIR+"/_more.c"
#define DEATHLOG "/players/pestilence/closed/dark/obj/deaths.txt"

status main(string str) {
   call_other("/players/pestilence/closed/dark/obj/deathlog.c","deathlog");
   write("You tap into the cybernet to check on recent player deaths...\n\n");
 write(HIK+"---------------------------------------------------------"+NORM);
   write("     Player        Time                     Killed by\n");
 write(HIK+"---------------------------------------------------------"+NORM);
   if(!str) tail(DEATHLOG);
   else if(str == "stat") {
     tail("/log/DEATHS");
 write(HIK+"---------------------------------------------------------"+NORM);
     return 1;
   }
   else if(str == "all") call_other(MORED, "more_file", DEATHLOG);
   write("\n");
write("Level scale:  Newbie "+GRN+"Low "+HIY+"Mid "+NORM+RED+"High "+HIM+"Great "+HIR+"Godlike\n"+NORM);
 write(HIK+"---------------------------------------------------------"+NORM);
write("Usage: obits <stat/all>\n");
   return 1;
}
