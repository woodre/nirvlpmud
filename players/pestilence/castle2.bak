#include <ansi.h>
#define TP this_player()

id(str) { return str == "rock" || str == "large rock"; }

short() {
    return ""+HIK+"A large rock"+NORM+"";
}

long() {
    write("The "+HIK+"rock"+NORM+" is very large.  There is a small crack on\n");
    write("the one side, where you might be able to enter if you are part\n");
    write("of a certain guild.\n");


}
init () {
     add_action ("enter_hall","enter");
     }

enter_hall(str) {
   if(str != "crack") { write("Enter what?\n");
       return 1;}
  if (this_player()->query_guild_name() == "Dark Order") {
     TP->move_player("crack#/players/pestilence/closed/dark/room/hall.c");
     return 1; }
        else
            write("You must be part of the guild to enter the crack.\n");
        return 1;
    }

reset(arg) {
    if (arg)
        return;
    move_object(this_object(), DEST);

