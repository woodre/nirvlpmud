#include "/players/beck/Defs.h"
#include "/players/beck/Rangers/RangerDefs.h"

RangerInit(){

/* Add an id of "kill_check_object" if a ranger has any points in the team skill */
/* Allows a small bonus when fighting with other rangers. */
   PO->AID("kill_check_object");

   if(PO->QuerySkillLevel("team") > 0){
      PO->AHiddenSkill("aid","beck");
   }
   if(PO->QuerySkillLevel("team") >= 5){
      PO->AHiddenSkill("wolfpack","beck",8);   
   }
   if(PO->QuerySkillLevel("team") >= 7){
      PO->AID("kill_check_object");
      PO->AHiddenSkill("parry","beck",8);   
   }
   
}

