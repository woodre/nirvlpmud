RangerInit(){
   if(PO->QuerySkillLevel("leadership") >= 1){
      PO->AHiddenSkill("study","beck");
   }
   if(PO->QuerySkillLevel("leadership") >= 2){
      PO->AHiddenSkill("lead","beck");   
   }
   if(PO->QuerySkillLevel("leadership") >= 5){
      PO->AHiddenSkill("retrain","beck");   
   }
   if(PO->QuerySkillLevel("leadership") >= 10){
      PO->AHiddenSkill("recruit","beck");
   }
}

