#include "/players/beck/Defs.h"
#include "/players/beck/Rangers/RangerDefs.h"

mapping RangerKills;

kill_check(object ob, object ranger, int team){

   int i;
   int exp;
   mixed kills;

   if(!RangerKills)
      RangerKills = ([ ]);

   if(!RangerKills[ob])
      RangerKills[ob] = ({ ranger, team });
   else
      RangerKills[ob] += ({ ranger, team });

   kills = RangerKills[ob];
   
   if(kills)
      i = sizeof(kills);
   else
      i = 0;
   
   if( (i/2) > 1 ){

      exp = ob->calculate_worth();

      exp = exp/500;

      if(exp > 0){
/*
         kills[0]->ABuildPoints((exp*kills[1]));

            if(ENV(kills[0]))
               tell_object(ENV(kills[0]) , "You receive "+(exp*kills[1])+" build points for your team participation.\n");
*/
         for (i=0; i<sizeof(kills); i++){

            if(ranger != kills[i]){

               ranger->ABuildPoints((exp*team));
            
               if(ENV(ranger))
                  tell_object(ENV(ranger) , "You receive "+(exp*team)+" build points for your team participation.\n");
            
         
               kills[i]->ABuildPoints((exp*kills[i+1]));

               if(ENV(kills[i]))
                  tell_object(ENV(kills[i]) , "You receive "+(exp*kills[i+1])+" build points for your team participation.\n"); 
            }

            i = i+1;
         }
      }

   }



   return;

}

   

  