reset(arg)
{
  ::reset(arg);
  if(arg) return;
  /* some stuff here */
  set_hit_func(this_object());
}

weapon_hit(atk)
{
  if(0 == random(3))
  {
    write("Your weapon cleaves through "+atk->query_name()+".\n");
    say(wielded_by->query_name()+"'s weapon cleaves through "+
      atk->query_name()+".\n");
    return 7; /* wc added */
  }
}
